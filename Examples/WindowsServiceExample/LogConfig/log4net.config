<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<configSections>
		<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHadler, log4net"/>
	</configSections>
	<system.web>
        <compilation debug="true" targetFramework="4.7.2" />
        <httpRuntime targetFramework="4.7.2" />
    </system.web>
	<log4net>

		<!-- Error日誌配置 -->
		<appender name="ErrorAppender" type="log4net.Appender.RollingFileAppender">
			<!-- 保存文件的名稱 -->
			<!--<file value="D:\\log4net.log" />-->
			<file value="./log/error/error_" />
			<appendToFile value="true" />
			<!-- 按照何種方式產生多個日誌文件 -->
			<rollingStyle value="Date" />
			<!-- 按照日期產生文件夾 -->
			<datePattern value="yyyy-MM-dd'.log'" />
			<!-- 是否只寫到一個文件中 -->
			<staticLogFileName value="false" />
			<!-- 文件的編碼方式 -->
			<param name="Encoding" value="UTF-8"/>
			<!-- 每個文件的大小 -->
			<maximumFileSize value="100KB" />
			<!-- 保存文件數量 -->
			<maxSizeRollBackups value="2" />
			<!-- 日誌輸出格式 -->
			<layout type="log4net.Layout.PatternLayout">
				<!--<conversionPattern value="%level %thread %logger - %message%newline" />-->
				<!--%-5level 是一個格式化字符串，用於在日誌消息中顯示日誌級別。其中 % 是格式化字符串的開始符號，- 表示左對齊，5 表示最小寬度為 5 個字符，level 表示要顯示的內容是日誌級別。因此，%-5level 的含義是：顯示日誌級別，左對齊，最小寬度為 5 個字符。-->
				<conversionPattern value="%n==========
								   %n【日誌級別】%-2level
								   %n【記錄時間】%date
								   %n【執行時間】[%r] 毫秒
								   %n【error文件】%F
								   %n【error行號】%L
								   %n【error類】%logger 屬性[%property{NDC}]
								   %n【error描述】%message" />
			</layout>
			<filter type="log4net.Filter.LevelRangeFilter, log4net">
				<levelMin value="Error" />
				<levelMax value="Fatal" />
			</filter>
		</appender>
		
		<!-- Debug日誌配置 -->
		<appender name="DebugAppender" type="log4net.Appender.RollingFileAppender">
			<!-- 保存文件的名稱 -->
			<!--<file value="D:\\log4net.log" />-->
			<file value="./log/debug/debug_" />
			<appendToFile value="true" />
			<!-- 按照何種方式產生多個日誌文件 -->
			<rollingStyle value="Date" />
			<!-- 按照日期產生文件夾 -->
			<datePattern value="yyyy-MM-dd'.log'" />
			<!-- 是否只寫到一個文件中 -->
			<staticLogFileName value="false" />
			<!-- 文件的編碼方式 -->
			<param name="Encoding" value="UTF-8"/>
			<!-- 每個文件的大小 -->
			<maximumFileSize value="100KB" />
			<!-- 保存文件數量 -->
			<maxSizeRollBackups value="2" />
			<!-- 日誌輸出格式 -->
			<layout type="log4net.Layout.PatternLayout">
				<!--<conversionPattern value="%level %thread %logger - %message%newline" />-->
				<!--%-5level 是一個格式化字符串，用於在日誌消息中顯示日誌級別。其中 % 是格式化字符串的開始符號，- 表示左對齊，5 表示最小寬度為 5 個字符，level 表示要顯示的內容是日誌級別。因此，%-5level 的含義是：顯示日誌級別，左對齊，最小寬度為 5 個字符。-->
				<conversionPattern value="%n==========
								   %n【日誌級別】%-2level
								   %n【記錄時間】%date
								   %n【執行時間】[%r] 毫秒
								   %n【debug文件】%F
								   %n【debug行號】%L
								   %n【debug類】%logger 屬性[%property{NDC}]
								   %n【debug描述】%message" />
			</layout>
			<filter type="log4net.Filter.LevelRangeFilter, log4net">
				<levelMin value="Debug" />
				<levelMax value="Warn" />
			</filter>
		</appender>

		<!-- Info日誌配置 -->
		<appender name="InfoAppender" type="log4net.Appender.RollingFileAppender">
			<!-- 保存文件的名稱 -->
			<!--<file value="D:\\log4net.log" />-->
			<file value="./log/info/info_" />
			<appendToFile value="true" />
			<!-- 按照何種方式產生多個日誌文件 -->
			<rollingStyle value="Date" />
			<!-- 按照日期產生文件夾 -->
			<datePattern value="yyyy-MM-dd'.log'" />
			<!-- 是否只寫到一個文件中 -->
			<staticLogFileName value="false" />
			<!-- 文件的編碼方式 -->
			<param name="Encoding" value="UTF-8"/>
			<!-- 每個文件的大小 -->
			<maximumFileSize value="100KB" />
			<!-- 保存文件數量 -->
			<maxSizeRollBackups value="2" />
			<!-- 日誌輸出格式 -->
			<layout type="log4net.Layout.PatternLayout">
				<!--<conversionPattern value="%level %thread %logger - %message%newline" />-->
				<!--%-5level 是一個格式化字符串，用於在日誌消息中顯示日誌級別。其中 % 是格式化字符串的開始符號，- 表示左對齊，5 表示最小寬度為 5 個字符，level 表示要顯示的內容是日誌級別。因此，%-5level 的含義是：顯示日誌級別，左對齊，最小寬度為 5 個字符。-->
				<conversionPattern value="%n==========
								   %n【日誌級別】%-2level
								   %n【記錄時間】%date
								   %n【執行時間】[%r] 毫秒
								   %n【info文件】%F
								   %n【info行號】%L
								   %n【info類】%logger 屬性[%property{NDC}]
								   %n【info描述】%message" />
			</layout>
			<filter type="log4net.Filter.LevelRangeFilter, log4net">
				<levelMin value="Info" />
				<levelMax value="Warn" />
			</filter>
		</appender>

		<root>
			<level value="ALL" />
			<appender-ref ref="ErrorAppender" />
			<appender-ref ref="DebugAppender" />
			<appender-ref ref="InfoAppender" />
		</root>
	</log4net>
</configuration>